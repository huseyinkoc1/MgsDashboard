<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redMinerBackgroundColor"
    tools:context=".view.RedMinerActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarRedMiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerRedMiner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp" />


    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circleRedMiner"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        app:ci_drawable="@drawable/circleindicator_redminer"
        app:ci_height="7dp"
        app:ci_width="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</FrameLayout>